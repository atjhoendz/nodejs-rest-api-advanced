{
  "name": "nodejs-rest-api-advanced",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon",
    "db:init": "node src/db/setup-db.js init",
    "db:drop": "node src/db/setup-db.js drop",
    "db:refresh": "node src/db/setup-db.js refresh",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "test:watch": "yarn test --watchAll",
    "pretest": "cross-env NODE_ENV=test yarn db:refresh"
  },
  "type": "module",
  "repository": "https://github.com/atjhoendz/nodejs-rest-api-advanced.git",
  "author": "atjhoendz <achunarmando@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "pg-promise": "^10.11.0",
    "redis": "^3.1.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "babel-jest": "^27.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.0",
    "redis-mock": "^0.56.3",
    "supertest": "^6.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  }
}
